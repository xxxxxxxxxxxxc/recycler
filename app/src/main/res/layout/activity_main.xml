<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/to_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_recycler_view"
        app:layout_constraintBottom_toTopOf="@+id/to_thread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/to_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_thread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_recycler_view"
        app:layout_constraintBottom_toTopOf="@+id/to_rxjava"/>

    <Button
        android:id="@+id/to_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_rxjava"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_thread"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>